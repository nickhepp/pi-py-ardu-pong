#:kivy 1.0.9

#:set paddle_short_dim 25
#:set paddle_long_dim 200

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:

    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player3: player_top
    player4: player_bottom

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center


    PongPaddle:
        id: player_left
        size: paddle_short_dim, paddle_long_dim
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        size: paddle_short_dim, paddle_long_dim
        x: root.width - self.width
        center_y: root.center_y

    PongPaddle:
        id: player_top
        size: paddle_long_dim, paddle_short_dim
        x: root.center_x - (self.width / 2)
        center_y: root.y

    PongPaddle:
        id: player_bottom
        size: paddle_long_dim, paddle_short_dim
        x: root.center_x - (self.width / 2)
        center_y: root.height - self.height

